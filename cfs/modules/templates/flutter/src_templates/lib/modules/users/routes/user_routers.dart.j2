import 'package:go_router/go_router.dart';
import '../presentation/screens/user_list_screen.dart';
import '../presentation/screens/user_detail_screen.dart';
import '../presentation/screens/user_create_screen.dart';
import '../presentation/screens/user_edit_screen.dart';
import 'user_paths.dart';

/// Routes configuration for User module
class UserRoutes {
  static List<RouteBase> routes = [
    GoRoute(
      path: UserPaths.users,
      builder: (context, state) => const UserListScreen(),
    ),
    GoRoute(
      path: UserPaths.userDetail,
      builder: (context, state) {
        final userId = state.pathParameters['id']!;
        return UserDetailScreen(userId: userId);
      },
    ),
    GoRoute(
      path: UserPaths.userCreate,
      builder: (context, state) => const UserCreateScreen(),
    ),
    GoRoute(
      path: UserPaths.userEdit,
      builder: (context, state) {
        final userId = state.pathParameters['id']!;
        return UserEditScreen(userId: userId);
      },
    ),
  ];
}
